{
  "name": "client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/client",
  "projectType": "application",
  "targets": {
    "pre-build": {
      "inputs": [{ "env": "NEXT_PUBLIC_TENANT_ID" }, { "env": "NODE_ENV" }],
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./webpack/pre-build.js",
        "cwd": "packages/client"
      }
    },
    "pre-serve": {
      "inputs": [{ "env": "NEXT_PUBLIC_TENANT_ID" }, { "env": "NODE_ENV" }],
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./webpack/pre-serve.js",
        "cwd": "packages/client"
      }
    },
    "build": {
      "inputs": [{ "env": "NEXT_PUBLIC_TENANT_ID" }, { "env": "NODE_ENV" }],
      "dependsOn": [
        {
          "target": "pre-build",
          "projects": "self"
        }
      ],
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/client"
      },
      "configurations": {
        "development": {
          "outputPath": "packages/client"
        },
        "production": {}
      }
    },
    "serve": {
      "inputs": [{ "env": "NEXT_PUBLIC_TENANT_ID" }, { "env": "NODE_ENV" }],
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "client:build",
        "dev": true
      },
      "dependsOn": [
        {
          "target": "pre-serve",
          "projects": "self"
        }
      ],
      "configurations": {
        "development": {
          "buildTarget": "client:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "client:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "client:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/client/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/client/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
